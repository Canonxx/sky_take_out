<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hubu.mapper.DishFlavorMapper">
<!--    void insert(List<DishFlavor> flavors);-->
    <insert id="insert" parameterType="com.hubu.entity.DishFlavor">
        insert into dish_flavor(dish_id,name,value) values
        <foreach collection="flavors" item="item" separator=",">
            (#{item.dishId},#{item.name},#{item.value})
        </foreach>
    </insert>
<!--    void updateBatch(List<DishFlavor> flavors);-->
    <update id="updateBatch" parameterType="java.util.List">
        update dish_flavor
        <set>
            name = CASE id
            <foreach collection="flavors" item="df">
                WHEN #{df.id} THEN #{df.name}
            </foreach>
            END,
            value = CASE id
            <foreach collection="flavors" item="df">
                WHEN #{df.id} THEN #{df.value}
            </foreach>
            END
        </set>
        where id in
        <foreach collection="flavors" item="df" open="(" separator="," close=")">
            #{df.id}
        </foreach>
    </update>
<!--    void deleteBatchByIds(List<Long> ids);-->
    <delete id="deleteBatchByIds">
        delete from dish_flavor
        where dish_id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
