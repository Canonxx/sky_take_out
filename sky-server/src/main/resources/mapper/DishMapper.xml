<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hubu.mapper.DishMapper">
<!--    Integer countByCategoryId(Long id);-->
    <select id="countByCategoryId" >
        select count(id)
        from dish
        where category_id = #{id}
    </select>
<!--    @AutoFill(AutoFillEnum.INSERT)-->
<!--    void insert(Dish dish);-->
    <insert id="insert" parameterType="com.hubu.entity.Dish" useGeneratedKeys="true" keyProperty="id">
        insert into
        dish(name,category_id,price,image,description,status,create_time,update_time,create_user,update_user)
        values (#{name},#{categoryId},#{price},#{image}, #{description}, #{status}, #{createTime}, #{updateTime}, #{createUser}, #{updateUser})
    </insert>
    <!--        Page<DishVO> pageQuery(Dish dish);-->
    <select id="pageQuery" parameterType="com.hubu.entity.Dish" resultType="com.hubu.vo.DishVO">
        select d.*,c.name as category_name
        from dish d
        left join category c on d.category_id = c.id
        <where>
            <if test="name != null and name != ''">
                and d.name like concat('%', #{name}, '%')
            </if>
            <if test="categoryId != null">
                and d.category_id = #{categoryId}
            </if>
            <if test="status != null">
                and d.status = #{status}
            </if>
        </where>
        order by d.update_time desc
    </select>
</mapper>
